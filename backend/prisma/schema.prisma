generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "prisma-zod-generator"
  output   = "../src/generated/zod"
  config   = "./zod-config.json"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  productId           String             @id
  gtin                String             @unique
  name                String
  description         String
  price               Float
  pricePerUnit        Float
  discount            Float?
  unit                String
  allergens           String[]
  carbonFootprintGram Float
  aisleType           AisleType          @default(OTHER)
  organic             Boolean            @default(false)
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  shoppingListItems   ShoppingListItem[]
  ProductInAisle      ProductInAisle[]

  @@index([productId])
  @@index([gtin])
  @@index([organic])
  @@index([unit])
}

model ShoppingList {
  id        String             @id @default(cuid())
  name      String
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  items     ShoppingListItem[]

  @@index([createdAt])
}

model ShoppingListItem {
  id             String       @id @default(cuid())
  shoppingListId String
  productId      String
  quantity       Int          @default(1)
  checked        Boolean      @default(false)
  shoppingList   ShoppingList @relation(fields: [shoppingListId], references: [id], onDelete: Cascade)
  product        Product      @relation(fields: [productId], references: [productId], onDelete: Cascade)

  @@unique([shoppingListId, productId])
  @@index([shoppingListId])
  @@index([productId])
}

model Store {
  slug String @id
  name String

  entranceX Int
  entranceY Int
  exitX     Int
  exitY     Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  aisles Aisle[]

  @@index([name])
}

enum AisleType {
  OBSTACLE
  FREEZER
  DRINKS
  PANTRY
  SWEETS
  CHEESE
  MEAT
  DAIRY
  FRIDGE
  FRUIT
  VEGETABLES
  BAKERY

  OTHER
}

model Aisle {
  id String @id @default(cuid())

  storeSlug String
  type      AisleType
  gridX     Int
  gridY     Int
  width     Int
  height    Int

  store          Store            @relation(fields: [storeSlug], references: [slug], onDelete: Cascade)
  ProductInAisle ProductInAisle[]

  @@index([gridX])
  @@index([gridY])
  @@index([width])
  @@index([height])
  @@index([storeSlug])
  @@index([type])
}

model ProductInAisle {
  productId String
  aisleId   String

  product Product @relation(fields: [productId], references: [productId], onDelete: Cascade)
  aisle   Aisle   @relation(fields: [aisleId], references: [id], onDelete: Cascade)

  @@id([productId, aisleId])
  @@index([productId])
  @@index([aisleId])
}
